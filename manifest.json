{
  "manifest_version": 3,
  "name": "DIY - Personal Notes Taker",
  "version": "1.0",
  "description": "Quickly jot down notes in your browser",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["storage"]
}